---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
    <div class="space-y-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Announcements</h1>
            <p class="text-gray-600 mt-2">
                Latest updates and news for Section J.
            </p>
        </div>

        <div class="space-y-6">
            <!-- Announcement Post -->
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-2xl font-semibold text-gray-800">
                    Welcome to Section J!
                </h2>
                <p class="text-gray-500 text-sm mt-2">Posted on November 5, 2025</p>
                <div class="text-gray-700 mt-4 space-y-4">
                    <p>
                        Welcome, everyone, to Section J! We are so excited to
                        have you here and embark on this journey together.
                    </p>
                    <p>
                        This website will be your go-to resource for all things
                        Section J. Please take some time to explore the site,
                        fill out your directory information, and check out the
                        upcoming events.
                    </p>
                </div>
            </div>
        </div>
    </div>
</MainLayout>
