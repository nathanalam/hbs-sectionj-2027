---
import Layout from '../layouts/MainLayout.astro';
import { readdir } from 'node:fs/promises';

const imagePath = 'public/assets/hbs_classcard_photos';
const files = await readdir(imagePath);
const members = files.map(file => {
    const name = file
        .replace('.jpg', '')
        .split('_')
        .map(word => word.charAt(0).toUpperCase() + word.slice(1))
        .join(' ');
    return {
        name,
        imageUrl: `/assets/hbs_classcard_photos/${file}`
    };
});
---

<Layout>
  <div class="bg-white p-6 md:p-8 rounded-lg shadow-lg">
    <h2 class="text-3xl font-bold text-gray-800 mb-6">Stock Picking Challenge</h2>
    <p class="text-gray-600 mb-4">
      Select your name from the dropdown and enter the stock ticker you'd like to pick.
    </p>

    <form action="/api/stock_pick" method="POST" class="space-y-4">
      <div>
        <label for="member" class="block text-sm font-medium text-gray-700">Your Name</label>
        <select id="member" name="member" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-hbs-crimson focus:border-hbs-crimson sm:text-sm rounded-md">
          {members.map(member => (
            <option>{member.name}</option>
          ))}
        </select>
      </div>

      <div>
        <label for="ticker" class="block text-sm font-medium text-gray-700">Stock Ticker</label>
        <input type="text" name="ticker" id="ticker" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-hbs-crimson focus:border-hbs-crimson sm:text-sm" placeholder="e.g., AAPL">
      </div>

      <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-hbs-crimson hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-hbs-crimson">
        Submit Pick
      </button>
    </form>
  </div>
</Layout>
