---
import "../styles/global.css";
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>HBS Class of 2027 - Section J</title>

        <!-- Import Inter font -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
            rel="stylesheet"
        />
        <link href="/favicon.ico" rel="icon" type="image/x-icon" />
    </head>
    <body class="bg-gray-100">
        <div class="min-h-screen">
            <!-- === Header === -->
            <header class="bg-hbs-crimson text-white shadow-lg">
                <div
                    class="container mx-auto px-6 py-6 flex justify-between items-center"
                >
                    <h1 class="text-2xl md:text-3xl font-bold tracking-tight">
                        HBS Class of 2027
                        <span
                            class="block text-lg md:inline md:ml-2 font-light opacity-90"
                            >Section J</span
                        >
                    </h1>
                    <div class="hidden md:block">
                        <img
                            src="/assets/hbs_w.png"
                            alt="HBS logo"
                            class="w-12 h-12"
                        />
                    </div>
                </div>
            </header>

            <!-- === Navigation === -->
            <nav class="bg-white shadow-md sticky top-0 z-10">
                <div class="container mx-auto px-6">
                    <div class="flex space-x-6 md:space-x-8 -mb-px">
                        <a
                            href="/home"
                            class={`py-4 px-1 border-b-4 text-sm md:text-base font-medium ${
                                Astro.url.pathname === "/home" ||
                                Astro.url.pathname === "/"
                                    ? "text-hbs-crimson border-hbs-crimson"
                                    : "text-gray-600 border-transparent hover:text-gray-800 hover:border-gray-300"
                            }`}
                        >
                            Home
                        </a>
                        <a
                            href="/directory"
                            class={`py-4 px-1 border-b-4 text-sm md:text-base font-medium ${
                                Astro.url.pathname === "/directory"
                                    ? "text-hbs-crimson border-hbs-crimson"
                                    : "text-gray-600 border-transparent hover:text-gray-800 hover:border-gray-300"
                            }`}
                        >
                            Directory
                        </a>
                        <a
                            href="/events"
                            class={`py-4 px-1 border-b-4 text-sm md:text-base font-medium ${
                                Astro.url.pathname === "/events"
                                    ? "text-hbs-crimson border-hbs-crimson"
                                    : "text-gray-600 border-transparent hover:text-gray-800 hover:border-gray-300"
                            }`}
                        >
                            Events
                        </a>
                        <a
                            href="/resources"
                            class={`py-4 px-1 border-b-4 text-sm md:text-base font-medium ${
                                Astro.url.pathname === "/resources"
                                    ? "text-hbs-crimson border-hbs-crimson"
                                    : "text-gray-600 border-transparent hover:text-gray-800 hover:border-gray-300"
                            }`}
                        >
                            Resources
                        </a>
                    </div>
                </div>
            </nav>

            <!-- Page Content Slot -->
            <main class="container mx-auto p-4 md:p-8">
                <slot />
            </main>
        </div>

        <!-- === Footer === -->
        <footer class="bg-gray-800 text-gray-400 p-8 mt-12">
            <div class="container mx-auto text-center">
                <p>
                    &copy; 2025 HBS Section J, Class of 2027. All Rights
                    Reserved.
                </p>
                <p class="text-sm mt-2">
                    This site is managed by the Section J Leadership Team.
                </p>
            </div>
        </footer>
    </body>
</html>
